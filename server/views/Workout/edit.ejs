<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<main role="main" class="inner cover">
    <div class="row">
        <div class="offset-md-1 col-md-15">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="exerciseTextField">Exercise</label>
                    <input type="text" class="form-control" id="exerciseTextField"
                    placeholder="Enter the Workout" name="Exercise" value="<%= Workout.Exercise %>" required>
                </div>
                <div class="form-group">
                    <label for="setTextField">Sets Performed</label>
                    <input type="number" class="form-control" id="setTextField" 
                    placeholder="Enter the amount of sets performed" name="Sets" value="<%= Workout.Sets %>" required>
                </div>
                <div class="form-group">
                    <label for="repTextField">Reps Performed</label>
                    <input type="number" class="form-control" id="repTextField"
                    placeholder="Enter the amount of reps performed" name="Reps" value="<%= Workout.Reps %>" required>
                </div>
                <div class="form-group">
                    <label for="PRTextField">PR Weight</label>
                    <input type="number" class="form-control" id="PRTextField"
                    placeholder="Enter your personal record weight" name="PRweight" value="<%= Workout.PRweight %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit <i class="fas fa-edit"></i></button>
                <button class="btn btn-warning" type="button" onclick="window.location.href='/workoutlist'">Cancel <i class="fas fa-undo"></i></button>
            </form>
        </div>
    </div>
</main>
<%- include ../Partials/footer.ejs %>