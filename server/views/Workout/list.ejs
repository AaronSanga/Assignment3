<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <a href="/add" class="btn btn-primary" role="button"> Add Workouts
            </a>
        <table class="table table-bordered table-striped table-hover">
            <!--Table Header-->
            <tr class="d-flex">
                <th class="text-center col-2">Exercise</th>
                <th class="text-center col-2">Sets</th>
                <th class="text-center col-2">Reps</th>
                <th class="text-center col-3">PR weight</th>
            </tr>
            <% for(let count=0;count<WorkoutList.length;count++) { %>
            <tr class="d-flex">
                <td class="text-center col-2"><%= WorkoutList[count].Exercise %></td>
                <td class="text-center col-2"><%= WorkoutList[count].Sets %></td>
                <td class="text-center col-2"><%= WorkoutList[count].Reps %></td>
                <td class="text-center col-3"><%= WorkoutList[count].PRweight %></td>
                <td class="text-center col-1"><a href="/edit/<%= WorkoutList[count]._id %>" class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i>Edit</a></td>
                <td class="text-center col-1"><a href="/delete/<%= WorkoutList[count]._id %>" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i>Delete</a></td>
            </tr>
            <% } %>
        </table>
        </div>
    </div>
</main> 
<%- include ../Partials/footer.ejs %>